{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, // for import prettier

    "declaration": true,
    "emitDeclarationOnly": true,

    "esModuleInterop": true,

    "lib": ["ESNext"],

    "module": "ESNext",
    "moduleResolution": "Node",

    "outDir": "types",

    "skipLibCheck": true,

    "target": "ESNext"
  },
  "include": ["src"]
}
